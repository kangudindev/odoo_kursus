<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="cdn_kursus_wizard_view_form" model="ir.ui.view">
            <field name="name">cdn.kursus.wizard.view.form</field>
            <field name="model">cdn.kursus.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="session_id" />
                        <field name="peserta_ids" />
                    </group>
                    <footer>
                        <button name="action_add_peserta" string="Tambah Peserta" type="object" class="btn-primary" confirm="Apakah Anda yakin akan menambah Peserta pada Sesi ini ?" />
                        <button string="Batal" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>



        <record id="cdn_kursus_wizard_view_form_multi" model="ir.ui.view">
            <field name="name">cdn.kursus.wizard.view.form.multi</field>
            <field name="model">cdn.kursus.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="session_ids" widget="many2many_tags" options="{'no_create_edit' : True}" />
                        <field name="peserta_ids" />
                    </group>
                    <footer>
                        <button name="action_add_many_peserta" string="Tambah Banyak Peserta" type="object" class="btn-primary" confirm="Apakah Anda yakin akan menambah Peserta pada semua Sesi yang dipilih ini ?" />
                        <button string="Batal" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>



        <record id="cdn_kursus_wizard_action" model="ir.actions.act_window">
            <field name="name">Tambah Peserta</field>
            <field name="res_model">cdn.kursus.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="cdn_kursus_wizard_view_form"/>
            <field name="binding_model_id" ref="model_cdn_sesi_kursus"/>
            <field name="binding_view_types">form</field>
        </record>
        


        <record id="cdn_kursus_wizard_action_multi" model="ir.actions.act_window">
            <field name="name">Tambah Peserta</field>
            <field name="res_model">cdn.kursus.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="cdn_kursus_wizard_view_form_multi"/>
            <field name="binding_model_id" ref="model_cdn_sesi_kursus"/>
            <field name="binding_view_types">list</field>
        </record>

    </data>
</odoo>