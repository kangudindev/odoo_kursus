<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- cdn.kursus list view -->
    <record id="cdn_kursus_view_list" model="ir.ui.view">
        <field name="name">cdn.kursus.view.list</field>
        <field name="model">cdn.kursus</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="produk_kursus_id"/>
                <field name="progress" widget="progressbar" options="{'color_field':'color'}"/>

                <!-- <field name="harga_kursus"/> -->
                <!-- <field name="biaya_konsumsi"/> -->
                
            </list>
        </field>
    </record>

    <!-- cdn.kursus form view -->
    <record id="cdn_kursus_view_form" model="ir.ui.view">
        <field name="name">cdn.kursus.view.form</field>
        <field name="model">cdn.kursus</field>
        <field name="arch" type="xml">
            <form string="Form Kursus">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id" widget="many2one_tags"/>
                        </group>
                        <group>
                            <field name="produk_kursus_id" />
                            <field name="harga_kursus" />
                            <field name="biaya_konsumsi" />
                        </group>
                    </group>
                    <notebook>
                        <page name="sesi" string="Sesi Kursus">
                            <group>
                                <field name="session_line" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="start_date"/>
                                        <field name="duration" widget="float_time"/>
                                        <field name="seats"/>
                                        <field name="state" widget="badge"
                                            decoration-muted="state == 'draft'"
                                            decoration-info="state == 'confirm'"
                                            decoration-success="state == 'done'" />
                                    </list>
                                </field>
                            </group>
                        </page>

                        <page name="description" string="Deskripsi">
                            <group>
                                <field name="description"/>
                            </group>
                        </page>

                        <page name="peralatan" string="Peralatan /Konsumsi">
                            <field name="produk_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="product_template_variant_value_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                                    <field name="standard_price"/>
                                    <field name="lst_price"/>
                                </list>
                            </field>
                        </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- cdn.kursus action window -->
    <record id="cdn_kursus_action" model="ir.actions.act_window">
        <field name="name">Data Kursus</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cdn.kursus</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="kursus_menu_act" name="Kursus" parent="training_menu_categ" action="cdn_kursus_action" sequence="10"/>


</odoo>
