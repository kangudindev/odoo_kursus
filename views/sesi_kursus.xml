<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <data>
            <!-- action server confirm -->
            <record id="action_cdn_sesi_kursus_confirm" model="ir.actions.server">
                <field name="name">Tandai Berlangsung</field>
                <field name="model_id" ref="model_cdn_sesi_kursus"/>
                <field name="binding_model_id" ref="model_cdn_sesi_kursus"/>
                <field name="binding_type">action</field>
                <field name="state">code</field>
                <field name="code">
                    records.action_confirm()
                </field>
            </record>


            <!-- action server done -->
            <record id="action_cdn_sesi_kursus_done" model="ir.actions.server">
                <field name="name">Tandai Selesai</field>
                <field name="model_id" ref="model_cdn_sesi_kursus"/>
                <field name="binding_model_id" ref="model_cdn_sesi_kursus"/>
                <field name="binding_type">action</field>
                <field name="state">code</field>
                <field name="code">
                    records.action_done()
                </field>
            </record>


            <!-- cdn.sesi.kursus list view -->
            <record id="cdn_sesi_kursus_view_list" model="ir.ui.view">
                <field name="name">cdn.sesi.kursus.view.list</field>
                <field name="model">cdn.sesi.kursus</field>
                <field name="arch" type="xml">
                    <list string="Sesi Kursus" decoration-danger="seats == 0">
                        <field name="name"/>
                        <field name="kursus_id"/>
                        <field name="instruktur_id" string="Instruktur"/>
                        <field name="start_date"/>
                        <field name="duration" widget="float_time"/>
                        <field name="seats"/>
                        <field name="state" widget="badge"
                            decoration-muted="state == 'draft'"
                            decoration-info="state == 'confirm'"
                            decoration-success="state == 'done'" />
                    </list>
                </field>
            </record>


            <!-- cdn.sesi.kursus calendar view -->
            <record id="cdn_sesi_kursus_view_calendar" model="ir.ui.view">
                <field name="name">cdn.sesi.kursus.view.calendar</field>
                <field name="model">cdn.sesi.kursus</field>
                <field name="arch" type="xml">
                    <calendar string="Calendar Description" date_start="start_date" mode="month">
                        <field name="name" filters="1"/>
                        <field name="instruktur_id"/>                        
                    </calendar>
                </field>
            </record>
            

            <!-- cdn.sesi.kursus form view -->
            <record id="cdn_sesi_kursus_view_form" model="ir.ui.view">
                <field name="name">cdn.sesi.kursus.view.form</field>
                <field name="model">cdn.sesi.kursus</field>
                <field name="arch" type="xml">
                    <form string="Form Sesi Kursus">
                        <header>
                            <button string="Konfirmasi" name="action_confirm" type="object" class="btn-primary" invisible="state != 'draft'" />
                            <button string="Selesai" name="action_done" type="object" class="btn-success" invisible="state != 'confirm'" />
                            <button string="Reset" name="action_reset" type="object" class="btn-secondary" invisible="state != 'draft'" />
                            <field name="state" widget="statusbar"/>
                        </header>
                        <sheet>
                            <widget name="web_ribbon" bg_color="bg-info" text="Selesai" invisible="state != 'done'" />
                            <group string="Informasi Kursus">
                                <group>
                                    <field name="name"/>
                                    <field name="kursus_id"/>
                                    <field name="start_date"/>
                                </group>
                                <group>
                                    <field name="duration" widget="float_time"/>
                                    <field name="seats"/>
                                    <field name="keterangan"/>
                                </group>
                            </group>

                            <group string="Informasi Instruktur">
                                <group>
                                    <field name="instruktur_id" readonly="state != 'draft'" />
                                    <field name="no_hp"/>
                                </group>
                                <group>
                                    <field name="email"/>
                                    <field name="jenis_kelamin"/>
                                </group>
                            </group>
                            <notebook>
                                <page string="LIST PESERTA">
                                    <field name="peserta_ids">
                                        <list>
                                            <field name="name" string="Nama Siswa"/>
                                            <field name="jenis_kelamin"/>
                                            <field name="mobile" string="No HP"/>
                                        </list>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                        <chatter />
                    </form>
                </field>
            </record>


            <!-- cdn.sesi.kursus action window -->
            <record id="cdn_sesi_kursus_action" model="ir.actions.act_window">
                <field name="name">Sesi Kursus</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">cdn.sesi.kursus</field>
                <field name="view_mode">list,form,calendar</field>
                <field name="help" type="html">
                    <p class="oe_view_nocontent_create">
                        <!-- Add Text Here -->
                    </p><p>
                        <!-- More details about what a user can do with this object will be OK --> 
                    
                    </p>
                </field>
            </record>
        </data>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="sesi_kursus_menu_act" name="Sesi Kursus" parent="training_menu_categ" action="cdn_sesi_kursus_action" sequence="20"/>

</odoo>
