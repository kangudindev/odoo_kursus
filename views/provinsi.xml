<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- cdn.provinsi list view -->
        <record id="cdn_provinsi_view_list" model="ir.ui.view">
            <field name="name">provinsi.view.list</field>
            <field name="model">cdn.provinsi</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="kode"/>
                    <field name="singkatan"/>
                    <field name="description"/>
                </list>
            </field>
        </record>


        <!-- cdn.provinsi form view -->
        <record id="cdn_provinsi_view_form" model="ir.ui.view">
            <field name="name">provinsi.view.form</field>
            <field name="model">cdn.provinsi</field>
            <field name="arch" type="xml">
                <form string="Form Provinsi">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="kode"/>
                            <field name="singkatan"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page name="kota" string="Kota">
                                <field name="kota_ids" readonly="1">
                                    <list delete="0">
                                        <field name="kode"/>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- cdn.provinsi action window -->
        <record id="cdn_provinsi_action" model="ir.actions.act_window">
            <field name="name">Provinsi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.provinsi</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="provinsi_menu_act" name="Provinsi" parent="wilayah_menu_categ" action="cdn_provinsi_action" sequence="10"/>
    
        
    
    </data>
    
</odoo>
